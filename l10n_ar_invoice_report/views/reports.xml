<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Invoice Template -->
    <template id="l10n_ar_report_invoice_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t
                    t-call="l10n_ar_invoice_report.l10n_ar_report_invoice_template_main"
                    t-lang="o.partner_id.lang"
                />
            </t>
        </t>
    </template>


    <!-- QWeb Reports -->
    <report
        id="l10n_ar_report_invoice"
        model="account.move"
        string="Comprobante Electronico"
        print_report_name="((object.name or 'Facturas ElectrÃ³nicas'))"
        report_type="qweb-pdf"
        name="l10n_ar_invoice_report.l10n_ar_report_invoice_template"
        file="l10n_ar_invoice_report.l10n_ar_report_invoice_template"
        attachment="(object.state in ('open','paid')) and ('INV'+(object.number or '').replace('/','')+'.pdf')"
    />

    <!-- Payment Template -->
    <template id="l10n_ar_report_payment_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t
                    t-call="l10n_ar_invoice_report.report_payment_emega_template"
                    t-lang="o.partner_id.lang"
                />
            </t>
        </t>
    </template>

    <!-- QWeb Reports -->
    <report
        id="l10n_ar_report_payment"
        model="account.payment"
        string="Comprobante de pago"
        print_report_name="((object.name or 'Comprobante de pago'))"
        report_type="qweb-pdf"
        name="l10n_ar_invoice_report.l10n_ar_report_payment_template"
        file="l10n_ar_invoice_report.l10n_ar_report_payment_template"
        attachment="(object.name+'.pdf')"
    />


</odoo>
