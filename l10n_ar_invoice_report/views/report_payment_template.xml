<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_payment_emega_template">
        <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
        <!-- Multicompany -->
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc" />
        </t>
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id" />
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company" />
        </t>
        <!-- ARTICLE -->
        <div
            class="article"
            t-att-data-oe-model="o and o._name"
            t-att-data-oe-id="o and o.id"
        >
            <!-- HEADER -->
            <div
                class="header"
                style="margin-bottom: 0px; padding-top: 5px; !important;"
            >
                <div class="row">
                    <div class="col-5 text-left">
                        <img
                            t-if="company.logo"
                            t-att-src="image_data_uri(company.logo)"
                            style="max-width: 250px; max-height: 45px;"
                            alt="Logo"
                        />
                    </div>
                    <div class="col-7 text-right" style="color: #0078a3;">
                        <h4>
                            <strong>
                                <span>Comprobante de pago</span>
                            </strong>
                        </h4>
                    </div>
                </div>
                <div
                    class="row"
                    style="border-bottom: 3px solid black; padding-bottom: 0px; !important;"
                >
                    <div class="col-6 text-left">
                        <span t-field="o.company_id.name" style="font-weight: bold;" />
                        <p style="font-size: 10px;">
                            <t t-if="o.company_id.partner_id.street">
                                <span t-field="o.company_id.partner_id.street" />
                                ,
                            </t>
                            <t t-if="o.company_id.partner_id.city">
                                <span t-field="o.company_id.partner_id.city" />
                                ,
                            </t>
                            <t t-if="o.company_id.partner_id.state_id">
                                <span t-field="o.company_id.partner_id.state_id.name" />
                                ,
                            </t>
                            <t t-if="o.company_id.partner_id.country_id">
                                <span
                                    t-field="o.company_id.partner_id.country_id.name"
                                />
                            </t>
                            <br />
                            <strong>CUIT: </strong>
                            <span t-field="o.company_id.vat" />
                            -
                            <span
                                t-field="o.company_id.partner_id.l10n_ar_afip_responsibility_type_id.name"
                            />
                            <span> • </span>
                            <strong>Ingresos Brutos: </strong>
                            <span
                                t-if="o.company_id.l10n_ar_gross_income_type == 'no_liquida'"
                            >No liquida</span>
                            <span
                                t-if="o.company_id.l10n_ar_gross_income_type != 'no_liquida'"
                                t-field="o.company_id.l10n_ar_gross_income_number"
                            />
                            <br />
                            <strong>Inicio de actividades: </strong>
                            <span t-field="o.company_id.l10n_ar_afip_start_date" />
                            <span> • </span>
                            <strong>Sitio Web: </strong>
                            <span t-field="o.company_id.website" />
                            <br />
                            <strong>Email: </strong>
                            <span t-field="o.company_id.email" />
                            <span> • </span>
                            <strong>Telefonos: </strong>
                            <span t-field="company.partner_id.phone" />
                            <span> / </span>
                            <span t-field="company.partner_id.mobile" />
                            <br />
                        </p>
                    </div>
                    <div class="col-6 text-right">
                        <div class="row">
                            <div class="col-12 p-2 text-right">
                                <span t-if="o.state == 'posted' or o.state == 'draft'">
                                    <strong>
                                        <span t-field="o.name" />
                                    </strong>
                                    <br />
                                </span>
                                <p style="font-size: 10px;">
                                    <strong>Fecha Pago: </strong>
                                    <span t-field="o.date" />
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- END HEADER -->
            <!-- PAGE -->
            <div class="page">
                <!-- DATOS CLIENTE -->
                <div
                    class="row"
                    style="border-bottom: 2px solid black; padding-top: 20px "
                >
                    <strong>
                        Datos del Cliente
                    </strong>
                </div>
                <div
                    class="row"
                    style="border-bottom: 1px solid black; padding-top: 5px; padding-bottom: 5px; font-size: 12px; "
                >
                    <div class="col-6">
                        <span
                            t-field="o.partner_id.name"
                            style="font-size: 15px; font-weight: bold;"
                        />
                        <br />
                        <t t-if="o.partner_id.street">
                            <span t-field="o.partner_id.street" />
                            ,
                        </t>
                        <t t-if="o.partner_id.city">
                            <span t-field="o.partner_id.city" />
                            ,
                        </t>
                        <t t-if="o.partner_id.state_id">
                            <span t-field="o.partner_id.state_id.name" />
                            ,
                        </t>
                        <t t-if="o.partner_id.country_id">
                            <span t-field="o.partner_id.country_id.name" />
                        </t>
                        <br />
                    </div>
                    <div class="col-6 text-right">
                        <strong> CUIT: </strong>
                        <span t-field="o.partner_id.vat" />
                        <br />
                        <strong>Condicion de IVA: </strong>
                        <span
                            t-field="o.partner_id.l10n_ar_afip_responsibility_type_id.name"
                        />
                        <br />
                        <strong>Grupo / Administracion: </strong>
                        <span
                            t-field="o.partner_id.company_group_id.name"
                            t-if="o.partner_id.company_group_id"
                        />
                    </div>
                </div>
                <div
                    class="row"
                    style="border-bottom: 2px solid black; padding-top: 20px;"
                >
                    <strong>Imputaciones del pago</strong>
                </div>
                <div
                    class="row"
                    style="border-bottom: 0px solid black; padding-top: 5px;"
                >
                    <table class="table table-striped table-bordered table-sm">
                        <thead class="table-dark">
                            <tr>
                                <th>Fecha Factura</th>
                                <th>Numero Comprobante</th>
                                <th>Referencia</th>
                                <th class="text-right">Importe Original</th>
                                <th class="text-right">Importe Abonado</th>
                                <th class="text-right">Balance</th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <tr
                                t-foreach="o.move_id._get_reconciled_invoices_partials()"
                                t-as="rec"
                            >
                                <t t-set="amount" t-value="rec[1]" />
                                <t t-set="inv" t-value="rec[2].move_id" />
                                <t t-if="inv.move_type != 'entry'">
                                    <td>
                                        <span t-field="inv.invoice_date" />
                                    </td>
                                    <td>
                                        <span t-field="inv.name" />
                                    </td>
                                    <td>
                                        <span t-field="inv.ref" />
                                    </td>
                                    <td class="text-right">
                                        <span t-field="inv.amount_total" />
                                    </td>
                                    <td class="text-right">
                                        <span
                                            t-esc="amount"
                                            t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"
                                        />
                                    </td>
                                    <td class="text-right">
                                        <span t-field="inv.amount_residual" />
                                    </td>
                                </t>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div> <!-- END PAGE -->
            <!-- FOOTER -->
            <div
                class="footer"
                style="padding-top: 5px; border-top: 3px solid black; !important;"
            /> <!-- END FOOTER -->
        </div> <!-- END ARTICLE -->
    </template>

</odoo>
