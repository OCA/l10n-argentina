<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

  <!-- *************************** -->
  <!-- * Perception Configuration * -->
  <!-- *************************** -->
  <!-- Form View for perception.perception -->
  <record id="view_perception_perception_form" model="ir.ui.view">
    <field name="name">perception.perception.form</field>
    <field name="model">perception.perception</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <form string="Perceptions">
        <group>
          <field name="name" select="1"/>
          <field name="tax_id" select="1"/>
          <field name="jurisdiccion" select="1"/>
          <field name="type_tax_use" select="1"/>
          <field name="type" select="1"/>
          <field name="state_id" select="1" attrs="{'invisible':[('jurisdiccion','!=','provincial')], 'required':[('jurisdiccion','=','provincial')]}"/>
        </group>
      </form>
    </field>
  </record>

  <!-- Tree View for perception.perception -->
  <record id="view_perception_perception_tree" model="ir.ui.view">
    <field name="name">perception.perception.tree</field>
    <field name="model">perception.perception</field>
    <field name="type">tree</field>
    <field name="arch" type="xml">
      <tree string="Perceptions">
        <field name="name" />
        <field name="tax_id" />
        <field name="type_tax_use" />
        <field name="state_id" />
      </tree>
    </field>
  </record>

  <!-- Search View for perception.tax.line -->
  <record id="view_perception_tax_line_search" model="ir.ui.view">
    <field name="name">perception.tax.line.search</field>
    <field name="model">perception.tax.line</field>
    <field name="type">search</field>
    <field name="arch" type="xml">
      <search string="Perception Tax Lines">
          <filter icon="terp-check" name="applied" string="Applied" domain="[('perception_id.type_tax_use', '=', 'sale')]" help="Perception Applied" />
          <filter icon="gtk-cancel" name="supported" string="Supported" domain="[('perception_id.type_tax_use', '=', 'purchase')]" help="Perception Supported" />
          <separator orientation="vertical"/>
          <field name="name"/>
          <field name="date"/>
          <field name="invoice_id"/>
          <field name="partner_id"/>
          <field name="perception_id"/>
          <field name="state_id"/>
          <field name="company_id" groups="base.group_multi_company" widget="selection"/>
        <group expand="0" string="Group By..." groups="account.group_account_user">
          <filter string="Province" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'state_id'}"/>
          <filter name="group_date" string="Date" icon="terp-go-month" domain="[]"  context="{'group_by':'date'}"/>
        </group>
      </search>
    </field>
  </record>

  <record id="view_perception_tax_line_tree" model="ir.ui.view">
    <field name="name">perception.tax.line.tree</field>
    <field name="model">perception.tax.line</field>
    <field name="type">tree</field>
    <field name="arch" type="xml">
      <tree string="Perception Tax Lines">
          <field name="date"/>
          <field name="name"/>
          <field name="invoice_id"/>
          <field name="partner_id"/>
          <field name="vat"/>
          <field name="amount" sum="Amount Total"/>
          <field name="base" sum="Base Total"/>
          <field name="state_id"/>
          <field name="company_id" groups="base.group_multi_company"/>
      </tree>
    </field>
  </record>
  
  <record id="view_perception_tax_line_form" model="ir.ui.view">
    <field name="name">perception.tax.line.form</field>
    <field name="model">perception.tax.line</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <form string="Perception Tax Line" version="7.0">
          <sheet>
              <h1>
                <label string="Perception Tax Line"/>
                <field name="name" class="oe_inline" readonly="1"/>
              </h1>
              <group>
                  <field name="date"/>
                  <field name="partner_id"/>
                  <field name="vat"/>
              </group>
              <group>
                <group>
                  <field name="amount" sum="Amount Total"/>
                  <field name="base" sum="Base Total"/>
                </group>
                <group>
                  <field name="state_id"/>
                  <field name="company_id" groups="base.group_multi_company"/>
                </group>
              </group>
          </sheet>
      </form>
    </field>
  </record>

  <!--Window Action para Perceptions -->
  <record model="ir.actions.act_window" id="action_perception_perception_tree">
    <field name="name">Perception</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">perception.perception</field>
    <field name="help">Here you can define Perceptions and their configuration to be used in Customer Invoices or Supplier Invoices</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
  </record>

  <record id="action_perception_perception_tree_view" model="ir.actions.act_window.view">
    <field eval="20" name="sequence"/>
    <field name="view_mode">tree</field>
    <field name="view_id" ref="view_perception_perception_tree"/>
    <field name="act_window_id" ref="action_perception_perception_tree"/>
  </record>

  <record id="action_perception_tax_tree" model="ir.actions.act_window">
        <field name="name">Perception Tax Applied</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">perception.tax.line</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="view_perception_tax_line_tree"/>
        <field name="context">{"search_default_applied":1, "use_internal_number": 1}</field>
        <field name="domain">[('invoice_id.state','in',['open','paid'])]</field>
        <field name="search_view_id" ref="view_perception_tax_line_search" />
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to create a perception.
          </p>
        </field>
  </record>

  <record id="action_perception_tax_supported_tree" model="ir.actions.act_window">
        <field name="name">Perception Tax Supported</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">perception.tax.line</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="view_perception_tax_line_tree"/>
        <field name="context">{"search_default_supported":1, "use_internal_number": 1}</field>
        <field name="domain">[('invoice_id.state','in',['open','paid'])]</field>
        <field name="search_view_id" ref="view_perception_tax_line_search" />
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to create a perception.
          </p>
        </field>
  </record>

  <menuitem id="perception_perception_menu" name="Perceptions" parent="account.next_id_27" sequence="20" action="action_perception_perception_tree"/>
  <menuitem id="perception_tax_line_applied_menu" name="Perception Applied" parent="account.menu_finance_receivables" sequence="30" action="action_perception_tax_tree"/>
  <menuitem id="perception_tax_line_supported_menu" name="Perception Supported" parent="account.menu_finance_payables" sequence="30" action="action_perception_tax_supported_tree"/>

  </data>
</openerp>

