<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="l10n_ar_view_account_move_reversal" model="ir.ui.view">
        <field name="name">l10n_ar.account.move.reversal.form</field>
        <field name="model">account.move.reversal</field>
        <field name="inherit_id" ref="account.view_account_move_reversal" />
        <field name="arch" type="xml">
            <field name="refund_method" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
        </field>
    </record>

    <record id="view_move_form" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="name">account.move.afip.form</field>
        <field name="inherit_id" ref="l10n_ar.view_move_form" />
        <field name="arch" type="xml">
            <button name="action_post" position="attributes">
                <attribute name="attrs">
                    {'invisible': ['|', ('state', '!=', 'draft'), ('validation_type', '!=', False)]}
                </attribute>
                <attribute name="states" />
            </button>
            <xpath expr="//button[@name='action_post'][2]" position="attributes">
                <attribute name="attrs">
                    {'invisible': ['|', ('state', '!=', 'draft'), ('validation_type', '!=', False)]}
                </attribute>
                <attribute name="states" />
            </xpath>
            <button name="action_reverse" position="after">
                <field name="show_credit_button" invisible="1" />
            </button>
            <button name="action_reverse" position="attributes">
                <attribute name="attrs">
                    {'invisible': [('show_credit_button','=',False)]}
                </attribute>
            </button>
            <button name="action_post" position="after">
                <button
                    name="action_post"
                    type="object"
                    attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('validation_type', '!=', 'production')]}"
                    string="Validar en AFIP"
                    class="oe_highlight"
                    groups="account.group_account_invoice"
                />
                <button
                    name="action_post"
                    type="object"
                    attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('validation_type', '!=', 'homologation')]}"
                    string="Validar en HOMOLOGACION"
                    class="oe_highlight"
                    groups="account.group_account_invoice"
                />
            </button>
            <field name="l10n_ar_afip_concept" position="after">
                <field name="afip_fce_es_anulacion" />
                <field name="afip_mypyme_sca_adc" />
                <field name="l10n_ar_currency_rate" readonly="1" />
            </field>
            <notebook>
                <page string="AFIP" name="afip">
                    <group>
                        <group>
                            <field
                                name='afip_result'
                                widget="badge"
                                decoration-success="afip_result == 'A'"
                                decoration-danger="afip_result == 'R'"
                            />
                            <field name='afip_auth_verify_type' invisible="1" />
                            <field name='afip_batch_number' invisible="1" />
                            <field name='validation_type' invisible="1" />
                            <label for="afip_auth_code" string="Autorizacion" />
                            <div class="oe_inline">
                                <field
                                    name="afip_auth_mode"
                                    class="oe_inline"
                                    decoration-bf="1"
                                />
                                 -
                                <field
                                    name="afip_auth_code"
                                    class="oe_inline"
                                    attrs="{'required': [('afip_auth_mode', '!=', False)]}"
                                    placeholder="Code"
                                    decoration-bf="1"
                                />
                                <button
                                    name="verify_on_afip"
                                    type="object"
                                    attrs="{'invisible': ['|', ('afip_auth_mode', '=', False), ('afip_auth_verify_type', '=', 'not_available')]}"
                                    string="Constantar"
                                    help="Constatar en AFIP"
                                    class="oe_inline oe_link"
                                    groups="base.group_user"
                                />
                            </div>
                            <field
                                name='afip_auth_verify_observation'
                                attrs="{'invisible': [('afip_auth_verify_observation', '=', False)]}"
                            />
                            <field
                                name='afip_auth_code_due'
                                string="CAE/CAI/CAEA Vencimiento"
                            />
                        </group>
                        <group>
                            <field name='afip_message' string="Mensaje AFIP" />
                        </group>
                    </group>
                    <group>
                    <field
                            name='afip_xml_request'
                            groups="base.group_no_one"
                            widget="ace"
                        />
                    <field
                            name='afip_xml_response'
                            groups="base.group_no_one"
                            widget="ace"
                        />
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
